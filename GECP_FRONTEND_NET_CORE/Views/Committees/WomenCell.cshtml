<!-- 6 - Meet our team -->
<div class="meet-our-team p-5 bg-light">

    <div class="p-2"> <div class="headings h4 font-weight-bold">Meet Our Team</div>  </div>
    <div class="row align-items-center">
        <div class="owl-carousel owl-theme" id="owlMeet">

            @foreach (var member in Model.members)
            {
                @foreach (var faculty in Model.facultyList)
                {
                    @if (member.FacultyId == faculty.Id)
                    {
                        <div class="item">
                            <div class="mx-auto p-2">
                                <div class="image">
                                    <img src="@faculty.Image" id="meetTeamImg1" class="image-img image-overlay-blur img-fluid" alt="">
                                    <div class="image-overlay text-center">
                                        <div class="img-title font-weight-bold">@faculty.Name</div>
                                        <p class="img-desc">@member.Role</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }

        </div>

    </div>
</div>

<div class="photo-gallery mx-4 my-5">
