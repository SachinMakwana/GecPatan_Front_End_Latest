    @using System.Web
@{
    ViewData["Title"] = "WomenCell";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="@Url.Content("~/css/cells.css")" rel="stylesheet" />
}

    <!--  Cell container   -->
    <!-- 1 - background image with title -->
@foreach (var item in Model.committe)
{
    @if (item.Name == "WOMEN CELL")
    {
        <div class="header-block row d-flex align-items-center mx-auto">
            <img src="~/images/cells/women.jpg" />
            <div class="text-block mx-auto text-block mx-auto d-flex align-items-center justify-content-center">

                @item.Name

            </div>
        </div>

        <!-- 2 - About women cell row -->
        <div class="about-women-cell row align-items-center mt-5">
            <div class="img-student d-flex justify-content-center mx-auto col-md-6 col-lg-6 col-xl-6 col-12 ">
                <img src="@item.Image" />
            </div>

            <div class="col-md-6 col-lg-6 col-xl-6 col-12 p-5">
                <div class="headings h4 font-weight-bold">About Women Cell</div>
                <div class="mt-4 text-justify">
                    @Html.Raw(HttpUtility.HtmlDecode(item.Description))

                </div>
            </div>
        </div>
        break;
    }
}


<!-- 3 - Vision-Mission row -->
<div class="row align-items-center mt-5 mb-5">
    @foreach (var vision in Model.vision)
    {
        @if (vision.DeptId == 1001)
        {
            <div class="bg-dark text-white col-md-6 col-lg-6 col-xl-6 col-12 p-5">
                <div class="headings h4 font-weight-bold">Vision</div>
                <div class="mt-4 text-justify">
                    @Html.Raw(HttpUtility.HtmlDecode(vision.Description))

                </div>
            </div>
        }
    }
    @foreach (var mission in Model.mission)
    {

        @if (mission.DeptId == 1001)
        {
            <div class="bg-light text-dark col-md-6 col-lg-6 col-xl-6 col-12 p-5">
                <div class="headings h4 font-weight-bold">Mission</div>
                <div class="mt-4 text-justify">
                    @Html.Raw(HttpUtility.HtmlDecode(mission.Description))

                </div>
            </div>
        }
    }
</div>


<!-- 4 - Activities -->
<div class="mx-5 my-3">
    <div class="h4 text-center font-weight-bold">ACTIVITIES</div>
    <div class="text-center font-weight-bold text-blue mb-4">Some Random tagline related to the cell</div>
    <div class="owl-carousel owl-theme">
        @foreach (var activities in Model.gallery)
        {
            @if (activities.GalleryTagId == 501)
            {
