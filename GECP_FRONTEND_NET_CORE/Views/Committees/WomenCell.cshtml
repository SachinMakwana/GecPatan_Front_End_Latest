    </div>
    <div class="owl-carousel owl-theme owl-loaded align-items-center p-3">
        <div class="owl-stage-outer  ">
            <div class="owl-stage">
                @foreach (var photo in Model.gallery)
                    @if (photo.GalleryTagId == 501)
                    {
                        <div class="owl-item">
                            <img src="@photo.Image" />
                        </div>
                    }
                }
            </div>
        </div>

    </div>
</div>

