
@{
    ViewData["Title"] = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/css/stylesheet.css" rel="stylesheet" />
    <link href="~/css/studymaterial.css" rel="stylesheet" />
}
 <div class="gal-container">
        <h3>GALLERY</h3>
        <h1>PHOTOS OF OUR COLLEGE</h1>
    </div>

        <div class="">
            <div class="container">
                <div class="row" id="eventId">
    
                    <button class="event activeEvent" name="Recent" onclick="openevent('Recent')">
                        <ul class="col">
                         <li>Recent</li> 
                        </ul> 
                    </button>
                    <button class="event" name="All" onclick="openevent('All')">
                            <ul class="col">
                                <li>All</li> 
                            </ul> 
                    </button>
                    <button class="event" name="Freshers" onclick="openevent('Freshers')">
                          <ul class="col"><li>Freshers</li></ul>
                   </button>
               <button class="event" onclick="openevent('Farwell')">
                        <ul class="col">
                          <li>Farwell</li>
                    </button>
                    <button class="event" onclick="openevent('Festivals')">
                        <ul class="col ">
                           <li> Festivals</li>
                    </button>
                    <button class="event" onclick="openevent('college-campus')">
                        <ul class="col ">
                           <li>college-campus</li>
                        </ul>
                    </button>
                    <button class="event" onclick="openevent('fecilities')">
                        <ul class="col ">
                           <li>Facilities</li>
                           </ul>
                    </button>
                    <button class="event" onclick="openevent('days-event')">
                        <ul class="col ">
                           <li> Days</li>  
                    </button>
                    <button class="event" onclick="openevent('NSS-event')">
                        <ul class="col ">
                               <li>NSS-events</li> 
                        </button> 
                </div>
                <div class="gal-menu" class="d-inline" id="yearId">
                <div class="dropdown1">
                    <button class="dropbtn1">YEAR
                        <i class="fa fa-caret-down"></i>
                      </button>
                      <div class="dropdown-content1">
                        <ul>
                       <li> <button onclick="openyear('year1All')"><a>2019</a></button></li>
                       <li> <button onclick="openyear('year2All')"><a>2020</a></button></li>
                       <li> <button onclick="openyear('year3All')"><a>2021</a></button></li>
                    </ul>
                      </div>

                </div>
                </div>
            </div>
        </div>
    
<!---defult recent-->    
       <div class="branch container-fluid mx-auto" id="Recent" >
        <div class="text-center d-flex justify-content-center align-items-center">
          <!--   <div class="bg-light-1">--->
            <div class=" container-fluid">
                <!-- ALL imges -->
                <div id="Recent" class="year ">
                    <div class="align-items-center d-flex justify-content-center p-3"><h2 class="headings  mb-4 font-weight-bold  title1">RECENT</h2></div>
                </div>
                <div class="owl-carousel owl-theme owl-loaded align-items-center p-3">
                    <div class="owl-stage-outer  ">
                        <div class="owl-stage">
                            @foreach(var item in Model){
                                
                                <div class="owl-item">
                                    <img src="@item.Image" />
                                </div>
                            }
                            
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
