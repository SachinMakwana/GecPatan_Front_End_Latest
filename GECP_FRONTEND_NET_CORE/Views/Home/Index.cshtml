@using System.Web
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/views/shared/_layout.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="~/css/cells.css">
}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @foreach(var college in Model.gallery){
            @if (college.GalleryTagId == 101)
            {
                <div class="carousel-item active">
                    <img src="@college.Image" class="d-block w-100 h-30vw" alt="...">
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev mr-t-15vw" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next mr-t-15vw" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="my-3">
    <div class="row">
        <div class="col-md-6">
            <div class="NA-head pl-2 h4 ml-2 my-1">News & Announcement</div>
            <div class="NA-content bg-brown white mt-4 ml-2">
                
                <marquee scrollamount="3" direction="up" onmouseover="stop();" scrollamount="2" onmouseout="start();" loop="500" style="height: 100%; background-color: transparent;">
                    <nav id="sidebar">
                        <ul id="newupdates" class="list-unstyled components">
                            @foreach (var news in Model.newsList){
                                <li>
                                    <div class="row">
                                        <i class="fa fa-hand-point-right yellow t-150 symb"></i><p class="pl-2 para">
                                            @Html.Raw(HttpUtility.HtmlDecode(news.Title)) :: <a href="@Url.Action("NewsDetail","Home",new {@id=news.Id})" class="nav-icon fas fa-edit">click here</a>
                                        </p>
                                    </div>
                                </li>
                            }
                        </ul>

                    </nav>
                </marquee>
            </div>
        </div>
        <div class="col-md-6">
            <div class="NA-head ml-2 h4 my-1">Events</div>
            
            <div id="carouselExampleControls" class="carousel slide mt-4 ml-2" data-ride="carousel">
                <div class="carousel-inner">
                    @foreach(var events in Model.gallery){
                        @if (events.GalleryTagId >= 700)
                        {
                            <div class="carousel-item active">
                                <img src="@events.Image" class="d-block w-100 h-17vw" alt="...">
                            </div>
                        }
                    }
                </div>
                <div class="mt-3 col-11">
                    <div class="row">
                        <div class="w-13vw mr-auto justi-saround">
                            <div class="row">
                                <a class="carousel-control-prev depaprtment bg-blue" href="#carouselExampleControls"
                                   role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next depaprtment bg-blue" href="#carouselExampleControls"
                                   role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div class="bg-blue white ReadMore align-middle p-2 cursor">Read More</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="bg-brown white slogan-container">
    <div class="row">
        <div class="slogan">विद्या विहीन: पशु:</div>

        <div class="verline bg-blue"></div>

        <div class="slogan">वदि्या एव सर्वधनम्</div>

    </div>
</div>
<div class="WC-head">Why Choose GEC, Patan?</div>
<div class="horline bg-blue"></div>

<div class="row">
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail wcg">
            <div class="img-container circle br-blue square-120p">
                <i class="fa fa-desktop t-500 d-flex justify-content-center mt-4" aria-hidden="true"></i>
            </div>
            <div class="caption hov-blue align-center"> Seven different courses provided </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-3">
        <div class="thumbnail wcg">
            <div class="img-container circle br-blue square-120p">
                <i class="fa fa-user-circle-o t-500 d-flex justify-content-center mt-3" aria-hidden="true"></i>
            </div>
            <div class="caption hov-blue align-center"> Highly Educated Faculties </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-3">
        <div class="thumbnail wcg">
            <div class="img-container circle br-blue square-120p">
                <i class="fa fa-book t-500 d-flex justify-content-center mt-3" aria-hidden="true"></i>
            </div>
            <div class="caption hov-blue align-center"> Library with book across nation </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-3">
        <div class="thumbnail wcg">
            <div class="img-container circle br-blue square-120p">
                <i class="fa fa-users t-500 d-flex justify-content-center mt-3" aria-hidden="true"></i>
            </div>
            <div class="caption hov-blue align-center"> Different commities to help you grow </div>
        </div>
    </div>
</div>

<div class="placement mt-3">
    <div class="IP">Incredible Placement</div>

    <div class="mt-4 mx-auto">
        <div class="owl-carousel owl-theme" id="owlIndex2">
            @foreach(var placement in Model.gallery){
                @if (placement.GalleryTagId >= 800)
                {
                    <div class="item p-2">
                        <img src="@placement.Image" alt="">
                    </div>
                }
            }
        </div>
    </div>
</div>
