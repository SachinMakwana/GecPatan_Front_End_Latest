@using System.Web
@{
    ViewData["Title"] = "NewsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="@Url.Content("~/css/admission.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/stylesheet.css")" rel="stylesheet" />
}


    <!-- 1. Admission Procedure-header  -->
    <div class="header-block row d-flex align-items-center mx-auto">
